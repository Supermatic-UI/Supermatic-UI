{
  "type": "layout",
  "title": "Registration form",
  "dataBinding": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "value": ""
      }
    },
    "actions": {}
  },
  "layout": {
    "components": [
      {
        "type": "label",
        "label": {
          "text": "{{name}}, Welcome here! Please fill out the form below"
        }
      },
      {
        "type": "input",
        "binding": "name",
        "input": {
          "label": "Name",
          "placeholder": "Enter your name"
        }
      }
    ]
  }
}
