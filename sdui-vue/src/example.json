{
  "type": "layout",
  "title": "Registration form",
  "dataBinding": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "value": ""
      },
      "isAgreeTerms": {
        "type": "boolean",
        "value": false
      }
    },
    "actions": {
      "formReset": {
        "type": "reset"
      },
      "formSubmit": {
        "type": "http",
        "http": {
          "method": "POST",
          "url": "https://backend.sdui.io/api/v1/registration",
          "body": "{\n  \"name\": \"{{name}}\",\n  \"isAgreeTerms\": \"{{isAgreeTerms}}\"\n}\n"
        }
      },
      "sayHello": {
        "type": "alert",
        "value": "{{name}}, Hi!"
      }
    }
  },
  "page": [
    {
      "type": "label",
      "label": {
        "text": "Welcome here! Please fill out the form below"
      },
      "size": 12,
      "row": 0,
      "cell": 0
    },
    {
      "type": "textInput",
      "binding": "name",
      "textInput": {
        "label": "Name",
        "placeholder": "Enter your name"
      },
      "size": 4,
      "row": 1,
      "cell": 0
    },
    {
      "type": "button",
      "button": {
        "text": "Say Hello",
        "action": "sayHello"
      }
    }
  ]
}
